<!DOCTYPE html>
<html>
<body>
    <h2>Confirmar Pago Comunidad</h2>
    <div id="detalles"></div>
    <button id="btnPagar" style="padding:15px; background:orange; color:white; border:none; border-radius:5px; cursor:pointer;">
        Confirmar en MetaMask
    </button>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/ethers/6.7.0/ethers.umd.min.js"></script>
    <script>
        // Obtener datos de la URL (enviados por Appsmith)
        const urlParams = new URLSearchParams(window.location.search);
        const monto = urlParams.get('monto');
        const receptor = urlParams.get('receptor');
        const desc = urlParams.get('desc');
        const contratoAddr = "0x05F9Aa8e061024a2Ea73e1a50bEB68b669CBFD86";
        const abi = [ 
	{
		"inputs": [],
		"stateMutability": "nonpayable",
		"type": "constructor"
	},
	{
		"anonymous": false,
		"inputs": [
			{
				"indexed": false,
				"internalType": "string",
				"name": "descripcion",
				"type": "string"
			},
			{
				"indexed": false,
				"internalType": "uint256",
				"name": "monto",
				"type": "uint256"
			},
			{
				"indexed": false,
				"internalType": "uint256",
				"name": "fecha",
				"type": "uint256"
			}
		],
		"name": "GastoRegistrado",
		"type": "event"
	},
	{
		"inputs": [
			{
				"internalType": "string",
				"name": "_descripcion",
				"type": "string"
			},
			{
				"internalType": "uint256",
				"name": "_monto",
				"type": "uint256"
			},
			{
				"internalType": "address",
				"name": "_receptor",
				"type": "address"
			}
		],
		"name": "registrarGasto",
		"outputs": [],
		"stateMutability": "nonpayable",
		"type": "function"
	},
	{
		"inputs": [],
		"name": "administrador",
		"outputs": [
			{
				"internalType": "address",
				"name": "",
				"type": "address"
			}
		],
		"stateMutability": "view",
		"type": "function"
	},
	{
		"inputs": [
			{
				"internalType": "uint256",
				"name": "",
				"type": "uint256"
			}
		],
		"name": "historialGastos",
		"outputs": [
			{
				"internalType": "string",
				"name": "descripcion",
				"type": "string"
			},
			{
				"internalType": "uint256",
				"name": "monto",
				"type": "uint256"
			},
			{
				"internalType": "uint256",
				"name": "fecha",
				"type": "uint256"
			},
			{
				"internalType": "address",
				"name": "pagadoA",
				"type": "address"
			}
		],
		"stateMutability": "view",
		"type": "function"
	},
	{
		"inputs": [],
		"name": "obtenerCantidadGastos",
		"outputs": [
			{
				"internalType": "uint256",
				"name": "",
				"type": "uint256"
			}
		],
		"stateMutability": "view",
		"type": "function"
	},
	{
		"inputs": [],
		"name": "totalGastado",
		"outputs": [
			{
				"internalType": "uint256",
				"name": "",
				"type": "uint256"
			}
		],
		"stateMutability": "view",
		"type": "function"
	}
];

        document.getElementById('detalles').innerHTML = `<p>Gasto: ${desc}</p><p>Monto: ${monto} ETH</p><p>A: ${receptor}</p>`;

        document.getElementById('btnPagar').onclick = async () => {
            if (window.ethereum) {
                const provider = new ethers.BrowserProvider(window.ethereum);
                const signer = await provider.getSigner();
                const contrato = new ethers.Contract(contratoAddr, abi, signer);
                
                const tx = await contrato.pagarGasto(desc, ethers.parseEther(monto), receptor);
                alert("Transacción enviada: " + tx.hash);
                await tx.wait();
                alert("¡Pago confirmado!");
                window.close(); // Cerrar pestaña al terminar
            }
        };
    </script>
