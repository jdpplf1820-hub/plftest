<!DOCTYPE html>
<html>
<body>
    <h2>Confirmar Pago Comunidad</h2>
    <div id="detalles"></div>
    <button id="btnPagar" style="padding:15px; background:orange; color:white; border:none; border-radius:5px; cursor:pointer;">
        Confirmar en MetaMask
    </button>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/ethers/6.7.0/ethers.umd.min.js"></script>
    <script>
        // Obtener datos de la URL (enviados por Appsmith)
        const urlParams = new URLSearchParams(window.location.search);
        const monto = urlParams.get('monto');
        const receptor = urlParams.get('receptor');
        const desc = urlParams.get('desc');
        const contratoAddr = "TU_DIRECCION_CONTRATO";
        const abi = [ /* TU_ABI_AQUI */ ];

        document.getElementById('detalles').innerHTML = `<p>Gasto: ${desc}</p><p>Monto: ${monto} ETH</p><p>A: ${receptor}</p>`;

        document.getElementById('btnPagar').onclick = async () => {
            if (window.ethereum) {
                const provider = new ethers.BrowserProvider(window.ethereum);
                const signer = await provider.getSigner();
                const contrato = new ethers.Contract(contratoAddr, abi, signer);
                
                const tx = await contrato.pagarGasto(desc, ethers.parseEther(monto), receptor);
                alert("Transacción enviada: " + tx.hash);
                await tx.wait();
                alert("¡Pago confirmado!");
                window.close(); // Cerrar pestaña al terminar
            }
        };
    </script>
</body>
</html>
